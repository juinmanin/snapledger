# Database
DATABASE_URL="postgresql://snapledger:snapledger_password@localhost:5432/snapledger?schema=public"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# MinIO (S3-compatible storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="snapledger-receipts"
MINIO_USE_SSL=false

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_REFRESH_EXPIRATION="30d"

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_VISION_API_KEY="your-api-key"
# Or use service account JSON path
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"

# Server
NODE_ENV="development"
PORT=3000
API_PREFIX="api"
API_VERSION="v1"

# CORS
CORS_ORIGIN="http://localhost:19006,exp://192.168.1.100:8081"

# Throttle
THROTTLE_TTL=60
THROTTLE_LIMIT=60

# File Upload
MAX_FILE_SIZE=10485760

# App
APP_NAME="SnapLedger"
APP_URL="http://localhost:3000"
