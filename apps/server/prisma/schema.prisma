// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  personal
  business
}

enum AccountType {
  cash
  bank
  credit_card
  debit_card
}

enum CategoryType {
  income
  expense
  transfer
}

enum ModeType {
  personal
  business
  both
}

enum ReceiptStatus {
  processing
  parsed
  confirmed
  failed
}

enum TransactionType {
  income
  expense
  transfer
}

enum FrequencyType {
  daily
  weekly
  monthly
  yearly
}

enum PeriodType {
  monthly
  quarterly
  yearly
}

enum InvoiceType {
  sales
  purchase
}

enum InvoiceStatus {
  pending
  confirmed
  rejected
}

enum NotificationType {
  budget_warning
  budget_exceeded
  receipt_processed
  recurring_due
  system
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  passwordHash      String    @map("password_hash")
  name              String
  phone             String?
  profileImage      String?   @map("profile_image")
  userType          UserType  @default(personal) @map("user_type")
  oauthProvider     String?   @map("oauth_provider")
  oauthId           String?   @map("oauth_id")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  deletedAt         DateTime? @map("deleted_at")

  businesses             Business[]
  accounts               Account[]
  categories             Category[]
  receipts               Receipt[]
  transactions           Transaction[]
  budgets                Budget[]
  recurringTransactions  RecurringTransaction[]
  categoryCorrections    CategoryCorrection[]
  notifications          Notification[]

  @@index([email])
  @@map("users")
}

model Business {
  id               String   @id @default(uuid())
  ownerId          String   @map("owner_id")
  businessName     String   @map("business_name")
  businessNumber   String?  @map("business_number")
  representative   String?
  businessType     String?  @map("business_type")
  businessCategory String?  @map("business_category")
  address          String?
  fiscalYearStart  Int      @default(1) @map("fiscal_year_start")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  owner        User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  accounts     Account[]
  receipts     Receipt[]
  transactions Transaction[]
  budgets      Budget[]
  taxInvoices  TaxInvoice[]

  @@index([ownerId])
  @@index([businessNumber])
  @@map("businesses")
}

model Account {
  id          String      @id @default(uuid())
  userId      String      @map("user_id")
  businessId  String?     @map("business_id")
  name        String
  accountType AccountType @map("account_type")
  balance     Decimal     @default(0) @db.Decimal(15, 2)
  currency    String      @default("KRW")
  color       String?
  icon        String?
  isActive    Boolean     @default(true) @map("is_active")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  user                 User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  business             Business?              @relation(fields: [businessId], references: [id], onDelete: Cascade)
  transactions         Transaction[]
  recurringTransactions RecurringTransaction[]

  @@index([userId])
  @@index([businessId])
  @@map("accounts")
}

model Category {
  id            String       @id @default(uuid())
  userId        String?      @map("user_id")
  parentId      String?      @map("parent_id")
  name          String
  categoryType  CategoryType @map("category_type")
  mode          ModeType     @default(both)
  icon          String?
  color         String?
  taxDeductible Boolean      @default(false) @map("tax_deductible")
  accountCode   String?      @map("account_code")
  sortOrder     Int          @default(0) @map("sort_order")
  isActive      Boolean      @default(true) @map("is_active")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  user                       User?                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent                     Category?                @relation("CategoryToCategory", fields: [parentId], references: [id])
  children                   Category[]               @relation("CategoryToCategory")
  receiptItems               ReceiptItem[]
  transactions               Transaction[]
  budgets                    Budget[]
  recurringTransactions      RecurringTransaction[]
  originalCategoryCorrections CategoryCorrection[]    @relation("OriginalCategory")
  correctedCategoryCorrections CategoryCorrection[]  @relation("CorrectedCategory")

  @@index([userId])
  @@index([parentId])
  @@index([categoryType])
  @@map("categories")
}

model Receipt {
  id              String        @id @default(uuid())
  userId          String        @map("user_id")
  businessId      String?       @map("business_id")
  imageUrl        String        @map("image_url")
  thumbnailUrl    String?       @map("thumbnail_url")
  ocrRawText      String?       @map("ocr_raw_text") @db.Text
  ocrStructured   Json?         @map("ocr_structured")
  aiConfidence    Decimal?      @map("ai_confidence") @db.Decimal(5, 4)
  status          ReceiptStatus @default(processing)
  merchantName    String?       @map("merchant_name")
  merchantAddress String?       @map("merchant_address")
  merchantPhone   String?       @map("merchant_phone")
  merchantBizNo   String?       @map("merchant_biz_no")
  receiptDate     DateTime?     @map("receipt_date")
  receiptTime     String?       @map("receipt_time")
  totalAmount     Decimal?      @map("total_amount") @db.Decimal(15, 2)
  taxAmount       Decimal?      @map("tax_amount") @db.Decimal(15, 2)
  tipAmount       Decimal?      @map("tip_amount") @db.Decimal(15, 2)
  paymentMethod   String?       @map("payment_method")
  cardLastFour    String?       @map("card_last_four")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  business     Business?     @relation(fields: [businessId], references: [id], onDelete: Cascade)
  items        ReceiptItem[]
  transactions Transaction[]
  taxInvoices  TaxInvoice[]

  @@index([userId])
  @@index([businessId])
  @@index([status])
  @@index([receiptDate])
  @@map("receipts")
}

model ReceiptItem {
  id         String   @id @default(uuid())
  receiptId  String   @map("receipt_id")
  itemName   String   @map("item_name")
  quantity   Decimal  @default(1) @db.Decimal(10, 2)
  unitPrice  Decimal  @map("unit_price") @db.Decimal(15, 2)
  totalPrice Decimal  @map("total_price") @db.Decimal(15, 2)
  categoryId String?  @map("category_id")
  sortOrder  Int      @default(0) @map("sort_order")
  createdAt  DateTime @default(now()) @map("created_at")

  receipt  Receipt   @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([receiptId])
  @@index([categoryId])
  @@map("receipt_items")
}

model RecurringTransaction {
  id              String          @id @default(uuid())
  userId          String          @map("user_id")
  categoryId      String          @map("category_id")
  accountId       String?         @map("account_id")
  transactionType TransactionType @map("transaction_type")
  amount          Decimal         @db.Decimal(15, 2)
  description     String?
  frequency       FrequencyType
  intervalValue   Int             @default(1) @map("interval_value")
  startDate       DateTime        @map("start_date")
  endDate         DateTime?       @map("end_date")
  nextDate        DateTime        @map("next_date")
  isActive        Boolean         @default(true) @map("is_active")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  account      Account?      @relation(fields: [accountId], references: [id], onDelete: SetNull)
  transactions Transaction[]

  @@index([userId])
  @@index([nextDate])
  @@index([isActive])
  @@map("recurring_transactions")
}

model Transaction {
  id              String          @id @default(uuid())
  userId          String          @map("user_id")
  businessId      String?         @map("business_id")
  receiptId       String?         @map("receipt_id")
  accountId       String?         @map("account_id")
  categoryId      String          @map("category_id")
  recurringId     String?         @map("recurring_id")
  transactionType TransactionType @map("transaction_type")
  amount          Decimal         @db.Decimal(15, 2)
  currency        String          @default("KRW")
  description     String?
  memo            String?
  merchantName    String?         @map("merchant_name")
  transactionDate DateTime        @map("transaction_date")
  transactionTime String?         @map("transaction_time")
  isRecurring     Boolean         @default(false) @map("is_recurring")
  tags            String[]        @default([])
  isConfirmed     Boolean         @default(false) @map("is_confirmed")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")
  deletedAt       DateTime?       @map("deleted_at")

  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  business             Business?             @relation(fields: [businessId], references: [id], onDelete: Cascade)
  receipt              Receipt?              @relation(fields: [receiptId], references: [id], onDelete: SetNull)
  account              Account?              @relation(fields: [accountId], references: [id], onDelete: SetNull)
  category             Category              @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  recurringTransaction RecurringTransaction? @relation(fields: [recurringId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([businessId])
  @@index([receiptId])
  @@index([categoryId])
  @@index([transactionDate])
  @@index([transactionType])
  @@index([deletedAt])
  @@map("transactions")
}

model Budget {
  id             String     @id @default(uuid())
  userId         String     @map("user_id")
  businessId     String?    @map("business_id")
  categoryId     String?    @map("category_id")
  amount         Decimal    @db.Decimal(15, 2)
  periodType     PeriodType @map("period_type")
  startDate      DateTime   @map("start_date")
  endDate        DateTime   @map("end_date")
  alertThreshold Decimal    @default(80) @map("alert_threshold") @db.Decimal(5, 2)
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  business Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([businessId])
  @@index([categoryId])
  @@index([startDate, endDate])
  @@map("budgets")
}

model TaxInvoice {
  id             String        @id @default(uuid())
  businessId     String        @map("business_id")
  receiptId      String?       @map("receipt_id")
  invoiceType    InvoiceType   @map("invoice_type")
  invoiceNumber  String?       @map("invoice_number")
  supplierBizNo  String        @map("supplier_biz_no")
  supplierName   String        @map("supplier_name")
  supplyAmount   Decimal       @map("supply_amount") @db.Decimal(15, 2)
  taxAmount      Decimal       @map("tax_amount") @db.Decimal(15, 2)
  totalAmount    Decimal       @map("total_amount") @db.Decimal(15, 2)
  invoiceDate    DateTime      @map("invoice_date")
  isElectronic   Boolean       @default(false) @map("is_electronic")
  status         InvoiceStatus @default(pending)
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  receipt  Receipt? @relation(fields: [receiptId], references: [id], onDelete: SetNull)

  @@index([businessId])
  @@index([invoiceType])
  @@index([invoiceDate])
  @@map("tax_invoices")
}

model CategoryCorrection {
  id                   String   @id @default(uuid())
  userId               String   @map("user_id")
  merchantName         String   @map("merchant_name")
  originalCategoryId   String   @map("original_category_id")
  correctedCategoryId  String   @map("corrected_category_id")
  createdAt            DateTime @default(now()) @map("created_at")

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalCategory  Category @relation("OriginalCategory", fields: [originalCategoryId], references: [id], onDelete: Cascade)
  correctedCategory Category @relation("CorrectedCategory", fields: [correctedCategoryId], references: [id], onDelete: Cascade)

  @@unique([userId, merchantName])
  @@index([userId])
  @@index([merchantName])
  @@map("category_corrections")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String
  body      String           @db.Text
  data      Json?
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}
